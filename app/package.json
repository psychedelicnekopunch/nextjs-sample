{
	"name": "nextjs-sample",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"env:test": "rm -f .env.local && cp .env.test .env.local",
		"env:dev": "rm -f .env.local && cp .env.dev .env.local",
		"env:stg": "rm -f .env.local && cp .env.stg .env.local",
		"env:prod": "rm -f .env.local && cp .env.prod .env.local",
		"dev": "npm run env:dev && next dev --turbopack",
		"dev:stg": "npm run env:stg && next dev --turbopack",
		"build": "npm run pre:commit && next build",
		"build:dev": "npm run env:dev && NODE_OPTIONS='--trace-deprecation' next build",
		"build:stg": "npm run env:stg && NODE_OPTIONS='--trace-deprecation' next build",
		"build:prod": "npm run env:prod && NODE_OPTIONS='--trace-deprecation' next build",
		"start": "next start",
		"lint": "next lint --no-cache && stylelint \"**/*.scss\" --color",
		"prettier": "npx prettier './**/*.{ts,tsx,json,scss}'",
		"format": "npx prettier --write './**/*.{ts,tsx,json,scss}' && next lint && stylelint \"**/*.scss\" --color",
		"format:check": "npx prettier --check './**/*.{ts,tsx,json,scss}' && next lint && stylelint \"**/*.scss\" --color",
		"pre:commit": "npm run env:test && npm run format && npm run test",
		"test": "jest",
		"test:clearcache": "jest --clearCache",
		"test:watch": "jest --watch",
		"pm2-production-start": "pm2 start ecosystem.config.js --env production",
		"pm2-production-reload": "pm2 reload nextjs-sample-prod",
		"pm2-production-restart": "pm2 restart nextjs-sample-prod",
		"pm2-production-stop": "pm2 stop nextjs-sample-prod",
		"pm2-production-delete": "pm2 delete nextjs-sample-prod",
		"pm2-staging-start": "pm2 start ecosystem.config.js --env development",
		"pm2-staging-reload": "pm2 reload nextjs-sample-stg",
		"pm2-staging-restart": "pm2 restart nextjs-sample-stg",
		"pm2-staging-stop": "pm2 stop nextjs-sample-stg",
		"pm2-staging-delete": "pm2 delete nextjs-sample-stg"
	},
	"dependencies": {
		"@types/js-cookie": "^3.0.6",
		"highlight.js": "^11.11.1",
		"js-cookie": "^3.0.5",
		"next": "^15.3.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"the-new-css-reset": "^1.11.3"
	},
	"devDependencies": {
		"@svgr/webpack": "^8.1.0",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.2.0",
		"@types/node": "^20",
		"@types/react": "^18",
		"@types/react-dom": "^18",
		"eslint": "^8.57.1",
		"eslint-config-next": "15.0.2",
		"eslint-config-prettier": "^9.1.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"prettier": "3.4.2",
		"sass": "^1.80.5",
		"stylelint": "^16.13.2",
		"stylelint-config-recommended-scss": "^14.1.0",
		"ts-node": "^10.9.2",
		"typescript": "^5"
	}
}
